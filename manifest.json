{
  "name": "Deezer Control",
  "version": "0.0.1",
  "description": "This extension allows you to control Deezer from your browser.",
  "browser_action": {
    "default_icon": "imgs/deezer.ico",
    "default_title": "", 
    "popup": "popup.html"
  },
  "background_page":"background.html",
  "options_page": "options.html",
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["http://*.deezer.com/*"],
      "js": ["scripts/player_listener.js"],
	  "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs", "http://*.deezer.com/"
  ]
}